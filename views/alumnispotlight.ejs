<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Alumni Spolight Profile</title>
  <link rel="icon" href="/static/favicon.ico">
  <link href="https://fonts.googleapis.com/css2?family=VT323&display=swap" rel="stylesheet">

  <link rel="stylesheet" href="../static/style.css">
  <link rel="stylesheet"
    href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
  <link rel="stylesheet"
    href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@48,400,0,0" />

  <!-- Font Awesome -->
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet" />


  <!-- animation css style link -->
  <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">
  <!-- MDB -->
  <link href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/4.4.0/mdb.min.css" rel="stylesheet" />
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.rtl.min.css"
    integrity="sha384-+4j30LffJ4tgIMrq9CwHvn0NjEvmuDCOfk6Rpg2xg7zgOxWWtLtozDEEVvBPgHqE" crossorigin="anonymous">

  <!-- Favicons -->

  <meta name="theme-color" content="#712cf9">


  <!-- Custom styles for this template  -->
  <link href="carousel.css" rel="stylesheet">
</head>

<body style="padding-top: 75px;">
  <span class="position-fixed bg-white px-3 py-1 fs-5 border rounded" style="top: 80px;z-index: 100;right: 8px;">Total : <span class="fw-bold"><%= totalal %></span></span>
  <%- include('common/header.ejs'); %>

    <div class="p-4 p-md-5 mb-4 my-6 d-flex align-items-center justify-content-center"
      style="background-color: #f6f2ed; padding: 80px;padding-top: 80px;padding-bottom: 80px;">
      <!-- <span class="position-absolute">Total : 4003</span> -->
      <div class="col-md-6 px-0 d-flex flex-column align-items-center justify-content-center" style="width: 100% ;">
        <h1 class="heading  fw-bold text-center ">Alumni Spotlights</h1>
        <a href="https://sdbc.ac.in/">
          <h3 class="text-md-center text-black text-center"> It Proud To Say That #WeAreBGI </h3>
        </a>
      </div>
    </div>
    <div class="container py-5">
      <div class="row row-cols-1 row-cols-md-3 g-4">
        <% for(let count=0; count < alumni.length; count++ ){ %>
          <div class="col">
            <div class="card m-4" style="border: 0px;box-shadow: none;">
              <img src="/alimage/<%= alumni[count].img %>" onerror=" this.src='https://ui-avatars.com/api/?name=<%= alumni[count].name %>' "
                class="card-img-top bd-placeholder-img rounded-circle" style="aspect-ratio: 1 / 1;" alt="...">
              <div class="card-body">
                <h5 class="card-title text-center">
                  <%= alumni[count].name %>
                </h5>
                <h5 class="card-subtitle text-center mb-2 text-muted">
                  <%= alumni[count].designation %>
                </h5>
                <p class="card-text text-center">
                  <%= ((alumni[count].facebookid && alumni[count].facebookid != "NA") || (alumni[count].linkedinid && alumni[count].linkedinid != "NA"))? "Social Media : ":"" %>
                  <% if(alumni[count].facebookid && alumni[count].facebookid != "NA"){ %>
                  <a href="<%= alumni[count].facebookid %>">Facebook</a>
                  <% } %>
 
                  <%= ((alumni[count].facebookid && alumni[count].facebookid != "NA") && (alumni[count].linkedinid && alumni[count].linkedinid != "NA"))? " | ":"" %>
                  
                  <% if(alumni[count].linkedinid && alumni[count].linkedinid != "NA"){ %>
                  <a href="<%= alumni[count].linkedinid %>">Linkedin</a>
                  <% } %>
                </p>
                <p class="card-text text-center">
                  <%= (alumni[count].email != "NA" && alumni[count].email)?"Email : "+alumni[count].email:"" %>
                </p>
                <p class="text-center"><a class="btn btn-primary" style="width: 100%;"
                    href="/alumni/detail/<%= alumni[count].uniqueId %>">More About
                    &raquo;</a>
                </p>
              </div>
            </div>
          </div>
          <% } %>
      </div>
    </div>

    <!-- footer -->
    <%- include('common/footer.ejs'); %>

      <!-- animation js link -->
      <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
      <script>
        AOS.init({
          offset: 300,
          duration: 2000,
        });
      </script>
      <!-- MDB -->
      <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/4.4.0/mdb.min.js"></script>

</body>

</html>